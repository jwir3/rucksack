<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <FrameLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/add_trip_main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        tools:context="com.glasstowerstudios.rucksack.ui.activity.TripsActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                style="@style/Form.Input">
                <ImageView
                    style="@style/Form.Input.Icon"
                    android:src="@drawable/ic_input_location"/>
                <EditText
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:hint="@string/destination"
                    android:maxLines="1"
                    android:inputType="textCapWords"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/destinationInput"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                style="@style/Form.Input">
                <ImageView
                    style="@style/Form.Input.Icon"
                    android:src="@drawable/ic_input_timedate"/>
                <EditText
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:hint="@string/start_date_description"
                    android:maxLines="1"
                    android:editable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/startDateInput"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                style="@style/Form.Input">
                <ImageView
                    style="@style/Form.Input.Icon"
                    android:rotation="40"
                    android:src="@drawable/ic_input_nights"/>

                <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                    android:id="@+id/nights_seek_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:dsb_min="0"
                    app:dsb_max="30"
                    app:dsb_indicatorColor="@color/colorAccent"
                    app:dsb_progressColor="@color/colorAccent"
                    app:dsb_thumbSize="15dp"
                    app:dsb_indicatorFormatter="%d Nights"/>
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <View
            android:id="@+id/bottom_bar_divider"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="@color/concrete" />
        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_below="@id/bottom_bar_divider">
            <Button
                android:id="@+id/next_select_pastime_button"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/next_select_pastimes"
                android:drawableRight="@drawable/ic_chevron_right"
                android:drawableTint="@color/colorAccent" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
