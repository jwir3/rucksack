<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/PackableItemsListItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_centerVertical="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/packable_item_icon"
        android:visibility="gone"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:src="@drawable/ic_briefcase"
        android:tint="@color/dove_gray"
    />

    <CheckBox
        android:id="@+id/packable_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    />

    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pack_item_name_textview"
            tools:text="Hello World"
        />
        <ImageButton
            android:id="@+id/pack_item_delete_button"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_action_delete"
            android:clickable="true"
            android:layout_margin="5dp"
            android:background="?selectableItemBackgroundBorderless"
        />
    </RelativeLayout>
</LinearLayout>
