<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BaseLayout">
        <item name="android:background">@color/earlyDawn</item>
    </style>

    <style name="TripLayout" parent="BaseLayout">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="ContentContainer" parent="TripLayout">
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="Form" />
    <style name="Form.Input">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="Form.Input.Icon">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_width">@dimen/form_input_icon_size</item>
        <item name="android:layout_height">@dimen/form_input_icon_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="Form.Input.Section" />
    <style name="Form.Input.Section.Title">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>
    <style name="Card" parent="CardView">
        <item name="android:background">@android:color/white</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="android:paddingLeft">@dimen/card_padding</item>
        <item name="android:paddingRight">@dimen/card_padding</item>
        <item name="android:paddingTop">@dimen/card_padding</item>
        <item name="android:paddingBottom">@dimen/card_padding</item>
    </style>
    <style name="RecyclerCard" parent="Card">
        <item name="android:background">@android:color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:layout_marginBottom">@dimen/packable_items_vertical_margin</item>
        <item name="android:layout_marginTop">@dimen/packable_items_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/packable_items_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/packable_items_horizontal_margin</item>
    </style>
    <!-- Styles for Packable Items List -->
    <style name="PackableItemsAddItem" parent="Widget.AppCompat.EditText">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginLeft">@dimen/packable_items_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/packable_items_horizontal_margin</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="PackableItemsListItem">
        <item name="android:layout_marginTop">@dimen/packable_items_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/packable_items_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/packable_items_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/packable_items_horizontal_margin</item>
    </style>
    <style name="IconDropDown" parent="Base.Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:layout_width">@dimen/dropdown_icon_size</item>
        <item name="android:layout_height">@dimen/dropdown_icon_size</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="MinimalistButton" parent="Base.Widget.AppCompat.Button.Small">
        <item name="android:layout_width">@dimen/button_width_about_dialog</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/paragraph_spacing</item>
    </style>
    <style name="CenteredHeadlineText" parent="TextAppearance.AppCompat.Headline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="CenteredTitleText" parent="TextAppearance.AppCompat.Title">
    </style>
    <style name="CenteredParagraphText" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:layout_marginTop">@dimen/paragraph_spacing</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
</resources>
